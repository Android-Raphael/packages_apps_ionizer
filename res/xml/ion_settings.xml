<PreferenceScreen 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/ionizer_title"
    settings:initialExpandedChildrenCount="5" >

    <!-- About -->
    <!--Preference
        android:key="ion_info"
        android:title="@string/about_ion"
        android:icon="@drawable/ic_settings_about" /-->

    <PreferenceScreen
        android:layout="@layout/ion_divider"
        android:selectable="false" />

    <!-- Interface -->
    <Preference
        android:key="interface_category"
        android:title="@string/interface_title"
        android:summary="@string/interfaceui"
        android:fragment="com.ion.ionizer.fragments.Interface"
        android:icon="@drawable/ic_settings_int"/>

    <!-- Status Bar -->
    <Preference
        android:key="statusbar_category"
        android:title="@string/statusbar_title"
        android:summary="@string/statusbar_title_summary"
        android:fragment="com.ion.ionizer.fragments.StatusBar"
        android:icon="@drawable/ic_settings_statusbar" />

    <!-- Quick Settings -->
    <Preference
        android:key="quicksettings_category"
        android:title="@string/quicksettings_title"
        android:summary="@string/quicksettings_title_summary"
        android:fragment="com.ion.ionizer.fragments.QuickSettings"
        android:icon="@drawable/ic_settings_quicksettings"/>

    <PreferenceScreen
        android:layout="@layout/ion_divider"
        android:selectable="false" />

    <!-- Buttons -->
    <Preference
        android:key="buttons_category"
        android:title="@string/buttons_title"
        android:summary="@string/button_info"
        android:fragment="com.ion.ionizer.fragments.Buttons"
        android:icon="@drawable/ic_settings_buttons"/>

    <!-- Navigation -->
    <Preference
        android:key="navigation_category"
        android:title="@string/navigation_title"
        android:fragment="com.ion.ionizer.fragments.Navigation"
        android:icon="@drawable/ic_settings_navigation"/>

    <!-- Lock Screen -->
    <Preference
        android:key="lockscreen_category"
        android:title="@string/lockscreen_title"
        android:summary="@string/keyguarrd"
        android:fragment="com.ion.ionizer.fragments.LockScreen"
        android:icon="@drawable/ic_settings_lockscreen"/>

    <PreferenceScreen
        android:layout="@layout/ion_divider"
        android:selectable="false" />

    <!-- Notifications -->
    <Preference
        android:key="notifications_category"
        android:title="@string/notifications_title"
        android:summary="@string/notifications_title_summary"
        android:fragment="com.ion.ionizer.fragments.Notifications"
        android:icon="@drawable/ic_settings_notifications"/>

    <!-- System -->
    <Preference
        android:key="system_category"
        android:title="@string/system_title"
        android:summary="@string/manusys"
        android:fragment="com.ion.ionizer.fragments.System"
        android:icon="@drawable/ic_settings_system"/>

    <!-- About -->
    <Preference
        android:key="about_category"
        android:title="@string/about_title"
        android:summary="@string/about_summary"
        android:icon="@drawable/ic_phone_info_v2"
        android:fragment="com.ion.ionizer.fragments.About"/>
</PreferenceScreen>
